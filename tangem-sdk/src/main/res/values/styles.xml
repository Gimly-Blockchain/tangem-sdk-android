<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardSdkTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/card_sdk_primary</item>
        <item name="colorPrimaryDark">@color/card_sdk_primary_dark</item>
        <item name="colorAccent">@color/card_sdk_accent</item>
        <item name="bottomSheetDialogTheme">@style/SdkBottomSheetDialogStyle</item>
    </style>

    <style name="SdkTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/card_sdk_text_color_primary</item>
    </style>

    <style name="SdkTextView.Medium">
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="SdkBottomSheetDialogStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
</resources>